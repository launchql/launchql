syn on
set nocompatible
set backspace=indent,eol,start
set tabstop=4
set shiftwidth=4
set expandtab

set foldmethod=marker
set mouse=a

filetype indent on
set ft=html
set si

hi Directory    ctermfg=darkcyan
hi Comment    ctermfg=1
hi NonText    cterm=bold ctermfg=darkcyan

let g:netrw_list_hide= '.*\.swo, .*\.swp$'